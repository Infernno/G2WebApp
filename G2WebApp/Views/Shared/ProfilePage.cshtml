@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<G2WebApp.Core.Data.ViewModels.PublicProfileViewModel>

<div class="profile-wrap">
    <table style="width: 100%">
        <tbody>
            <tr>
                <td style="width: 110px; vertical-align: top;">
                    <div style="padding-left: 5px; padding-top: 0px;">
                        <img src="@Model.Profile.PhotoFile" style="width: 92px; box-shadow: 0px 0px 3px #c8c8c8;"><br>

                    </div>
                </td>
                <td style="vertical-align: top;">
                    <div style="padding-top: 0px; line-height: 15px;">
                        <a href="/profile/@Model.Profile.DisplayName" style="color: #ffffff; font-family: Tahoma, Arial; font-size: 21px; text-decoration: none;">@Model.Profile.DisplayName</a>
                        <br>
                        Зарегистрирован @Model.Profile.RegistrationDate.ToShortDateString()
                        <br>
                        рейтинг: @Model.Profile.Rating
                        <!--
                        <br>
                        комментариев: 0
                        -->
                        <br>
                        добавил постов: @Model.Posts.Count
                        <br>
                    </div>
                </td>
                <td style="vertical-align: top; width: 215px">
                    <!-- Awards, badges goes here -->
                </td>
            </tr>
        </tbody>
    </table>
</div>

<!-- Posts container -->

<div>
    @if (Model.Posts.Count == 0)
    {
        <p align="center" class="center-message">У пользователя @Model.Profile.DisplayName нет постов.</p>
    }
    else
    {
        foreach (var post in Model.Posts)
        {
            @Html.Partial("Views/Shared/Post.cshtml", post)
        }
    }
</div>
